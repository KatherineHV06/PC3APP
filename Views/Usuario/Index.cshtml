@model List<SilliconValley.Integration.dto.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1 style=" text-align: center;font-weight: bold; font-family: Arial, sans-serif;">Usuarios</h1>

<table class="table" style="background-color: #aad5e9;">
    <thead>
        <tr>
            <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Id</th>
            <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Email</th>
            <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">First Name</th>
            <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Last Name</th>
            <th style="font-weight: bold; font-family: Arial, sans-serif; color:#140d75;">Avatar</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;" >@user.Id</td>
                    <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@user.Email</td>
                    <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@user.Nombre</td>
                    <td style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">@user.Apellido</td>
                    <td><img src="@user.Avatar" alt="Avatar" style="width:60px;height:60px;" /></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>